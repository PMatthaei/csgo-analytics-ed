      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSGO_Analytics.src.views"
      mc:Ignorable="d" 
      d:DesignHeight="735"
      Title="AnalyseDemosView" Width="1148">

    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="740" LastChildFill="False" VerticalAlignment="Top" Width="1148" Background="Gainsboro" Margin="0,0,-15,0">
            <Grid Height="740" VerticalAlignment="Top" Width="1148">
                <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="714" Margin="10,10,0,0" VerticalAlignment="Top" Width="1128">
                    <TabItem Header="Live view">
                        <Grid Background="#FFE5E5E5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="79*"/>
                                <ColumnDefinition Width="1036*"/>
                            </Grid.ColumnDefinitions>
                            <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="575" Margin="95,14,0,0" VerticalAlignment="Top" Width="935" Background="Black" Grid.Column="1" MouseWheel="Canvas_OnMouseWheel" MouseLeftButtonDown="Canvas_OnLeftMouseButtonDown" MouseLeftButtonUp="Canvas_OnLefttMouseButtonUp" MouseMove="Canvas_OnMouseMove" MouseLeave="Canvas_OnMouseLeave"/>
                            <Slider x:Name="time_slider" HorizontalAlignment="Left" Margin="114,639,0,0" VerticalAlignment="Top" Width="866" Grid.Column="1"/>
                            <Label x:Name="time_label" Content="Time: 23:43:02" HorizontalAlignment="Left" Margin="114,591,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                            <Label x:Name="tick_label" Content="Tick: 234302" HorizontalAlignment="Left" Margin="938,591,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                            <Button x:Name="button" Content="PLAY" HorizontalAlignment="Center" Margin="525,0,456,69" VerticalAlignment="Bottom" Width="75" Grid.Column="1"/>
                            <Button x:Name="button1" Content="&gt;" HorizontalAlignment="Left" Margin="610,597,0,0" VerticalAlignment="Top" Width="40" Grid.Column="1"/>
                            <Button x:Name="button2" Content="&gt;&gt;" HorizontalAlignment="Left" Margin="660,595,0,0" VerticalAlignment="Top" Width="40" Grid.Column="1"/>
                            <Button x:Name="button3" Content="&lt;" HorizontalAlignment="Left" Margin="456,597,0,0" VerticalAlignment="Top" Width="40" Grid.Column="1"/>
                            <Button x:Name="button4" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="406,595,0,0" VerticalAlignment="Top" Width="40" Grid.Column="1"/>
                            <Menu x:Name="menu" HorizontalAlignment="Left" Height="592" Margin="10,10,0,0" VerticalAlignment="Top" Width="160" Grid.ColumnSpan="2">
                                <Label Content="Team Terrorists:"/>
                                <ListBoxItem Content="Player1"/>
                                <ListBoxItem Content="Player2"/>
                                <ListBoxItem Content="Player3"/>
                                <ListBoxItem Content="Player 4"/>
                                <ListBoxItem Content="Player 5"/>
                                <Label Content="Team CounterTerrorists:"/>
                                <ListBoxItem Content="Player1"/>
                                <ListBoxItem Content="Player2"/>
                                <ListBoxItem Content="Player3"/>
                                <ListBoxItem Content="Player 4"/>
                                <ListBoxItem Content="Player 5"/>
                            </Menu>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Heatmap">
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                </TabControl>
            </Grid>
        </DockPanel>
    </Grid>
</Page>